  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "usfm",
      "camelcase": "Usfm",
      "title": "USFM",
      "scope": "source.usfm",
      "file-types": [
        "usfm", "sfm"
     ],
      "injection-regex": "^usfm$",
      "class-name": "TreeSitterUsfm"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "MIT",
    "description": "Unified Scripture Format Markers",
    "authors": [
      {
        "name": "BCS",
        "email": "kavitharaju18@gmail.com"
      }
    ],
    "links": {
      "repository": "https://github.com/Bridgeconn/usfm-grammar/tree/master/tree-sitter-usfm3"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}